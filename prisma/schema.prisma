// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model users {
  id Int @id @default(autoincrement())
  email String @unique
  password String
}

model tests {
  id Int @id @default(autoincrement())
  name String
  pfdUrl String
  categoryId Int
  teacherDisciplineId Int
  categories categories @relation(fields: [categoryId], references: [id])
  teachersDisciplines teachersDisciplines @relation(fields: [teacherDisciplineId], references: [id])
}

model categories {
  id Int @id @default(autoincrement())
  name category @unique

  tests tests[]
}

model teachersDisciplines {
  id Int @id @default(autoincrement())
  teacherId Int
  disciplineId Int
  teachers teachers @relation(fields: [teacherId], references: [id])
  disciplines disciplines @relation(fields: [disciplineId], references: [id])

  tests tests[]
}

model teachers {
  id Int @id @default(autoincrement())
  name String @unique

  teachersDisciplines teachersDisciplines[]
}

model disciplines {
  id Int @id @default(autoincrement())
  name String @unique
  termId Int
  terms terms @relation(fields: [termId], references: [id])

  teachersDisciplines teachersDisciplines[]
}

model terms {
  id Int @id @default(autoincrement())
  number Int @unique

  disciplines disciplines[]
}

enum category {
  p1
  p2
  p3
  p2ch
  outras
}
